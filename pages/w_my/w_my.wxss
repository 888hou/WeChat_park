/* pages/w_my/w_my.wxss */
page{
  background: white;
}
/*顶部个人信息  */
.top{
  height: 360rpx;
  width: 100%;
  background: #FFc452;
  box-sizing: border-box;
  padding: 80rpx 20rpx 0;
  background: linear-gradient(to bottom right, #ffd054  , #f4b715); /*渐变*/
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: top;
  justify-content: left;   
  margin-left: 100rpx;
}
.login-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;    
  height: 100%;
}
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.userinfo-info{
  margin-left: 48rpx;
   display: flex;
  flex-direction: column;
}
.userinfo-nickname {
  color: #000;
  font-size: 36rpx;
  font-weight: 700;
}
.userinfo-member{
  color: #000;
  font-size: 30rpx;
  margin-top: 35rpx;
}
.userinfo-member1{
  color: #000;
  font-size: 30rpx;
  margin-top: 35rpx;
  text-align: center;
}
.userinfo-jifen{
  color: #000;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.get-userinfo{
  color: #000;
  background: #FFc452;
  margin: 0;
  padding: 0;
  border: none;
  font-size: 38rpx;
}
.get-userinfo::after{
  border: 0;
}
.login-right{
  width: 46rpx;
  height: 46rpx;
}

/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
  width: 100%;
  padding-top:30rpx; 
}
.list-item {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  /* height: 90rpx; */
  /* background: white; */
  margin: 60rpx 0 0;
}
