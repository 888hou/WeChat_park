.item1{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  font-size: 32rpx;
  margin-left: 30rpx; 
}
.with_arrow {  
    width: 15px;  
    height: 15px;  
    margin: 20rpx 30rpx;
}
.memberjifen{
   font-size: 32rpx;
   margin-right: 20rpx; 
   color: #777;
}
.person-line {
  width: 100%;
  height: 3rpx;
  background: lightgray;
}
.item2{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.car-number{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: blue;
}