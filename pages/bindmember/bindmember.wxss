/* pages/bindmember/bindmember.wxss */
/*顶部logo  */
.logo{
  width: 100%;
  height:310rpx;
}
.logo image{
  width: 100%;
  height:100%;
}
/*绑定提示  */
.bind-tishi{
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.search-prompt{
  width: 80%;
  margin: 15rpx auto 0;
  text-align: center;
}
.prompt-img{
  float: left;
  margin: 5rpx 10rpx 0 0;
  width: 40rpx;
  height:40rpx;
}
.prompt-desc{
  color:#333;
  font-size: 32rpx;
}
/*绑定会员  */
.bind-info{
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.bind-title {  
    height: 60rpx;  
    line-height: 60rpx;  
    text-align: center;  
}  
.bind-title .line {  
    display: inline-block;  
    width: 30%;  
    border-top: 1rpx dashed #ccc ;  
}  
.bind-title .bind-title-desc {  
    color: #686868;  
    margin: 0 7%;
    vertical-align: -8rpx;  
}  

/*表单  */
form input{
  border: 1rpx solid #dcdad6; 
  background: white;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  border-radius: 8rpx;
  width: 80%;
  height: 90rpx;
  margin: 50rpx auto 0;
}
.btn-area button{
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 50rpx auto ;
  font-size: 30rpx;
  background: #fff;
  color: #000;
  border: 1rpx solid #000;
}