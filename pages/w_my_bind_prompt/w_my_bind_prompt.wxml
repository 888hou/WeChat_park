<!--pages/bindprompt/bindprompt.wxml-->
<view class='logo'>
  <image class='img-logo' src='/images/logo.png'></image>
</view>
<view class='bind-info'>
  <view class="bind-title">  
        <text class="line"></text>  
        <text class="bind-title-desc">车牌绑定</text>  
        <text class="line"></text>  
  </view>  
  <!--  表单  -->
  <!-- <form bindsubmit="formSubmit" bindreset="formReset"> -->
    <view class='bind-prompt1'>绑定成功！</view>
    <view class='bind-prompt2'>车牌<text>XX XXXXX</text>已成功绑定！</view>
    <view class="btn-area">
      <button  class="btn-false" bindtap='tapindex'>确定</button>
    </view>
    <view class="bind-back">
      <text bindtap='tapplatenumber'>继续绑定</text>
    </view>
  <!-- </form> -->
</view>
<view class='bind-tishi'>
  <view class="bind-title">  
        <text class="line"></text>  
        <text class="bind-title-desc">温馨提示</text>  
        <text class="line"></text>  
  </view>  
  <view class="search-prompt" >
      <view class='prompt-img'> 
         <image class='prompt-img-info' src='/images/tishi1.png'></image> 
      </view>
      <text class="prompt-desc">每位会员可绑定多个车牌，绑定后的车牌均可享受会员优惠，最多可绑定5个。
      </text>
  </view>
</view>

