/**index.wxss**/
page{
  background: #f3f3f3;
  height:100%;
}

/*swiper*/
swiper{
  width: 100%;
  height: 310rpx;
}
swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
/*信息展示*/
.park-info{
  overflow: hidden;
  width: 100%;
  background-color: white;
  position: relative;
  padding: 30rpx  0rpx;
  margin-bottom: 20rpx;
}
.info{
  float: left;
  width: 33%;
}
.info text{
  display: block;
  text-align: center;
}
.park-show{
  color: orange;
  font-size:34rpx;
}
.park-click{
   width: 100%;
   text-align: center;
}
.park-desc{
  color: #ccc;
  margin-top: 10rpx;
  font-size:25rpx;
}
