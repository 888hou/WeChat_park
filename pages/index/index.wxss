/*swiper*/
swiper{
  width: 100%;
  height: 310rpx;
}
swiper image{
  display: block;
  width: 100%;
  height: 100%;
}
/*信息展示*/
.park-info{
  overflow: hidden;
  width: 100%;
  background-color: white;
  position: relative;
  padding: 20rpx  0rpx;
  margin-bottom: 10rpx;
}
.info{
  float: left;
  width: 33%;
}
.info text{
  display: block;
  text-align: center;
}
.park-show{
  color: orange;
  font-size:34rpx;
}
.park-desc{
  color: #ccc;
  margin-top: 10rpx;
  font-size:25rpx;
}
