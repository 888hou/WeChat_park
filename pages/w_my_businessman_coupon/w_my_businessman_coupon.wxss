/* 无优惠券显示 */
.no-coupon{
  font-size: 34rpx;
  text-align: center;
  color: #333;
  margin-top: 450rpx;
}
.no-coupon text{
  display: block;
}
.no-coupon text:last-child{
  color: #999;
  font-size: 26rpx;
  margin-top: 15rpx;
}
/* 有优惠券时 */
.top-info{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #909090;
}
.top-info text{
  width: 33%;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  text-align: center;
  font-size: 32rpx;
  color: #909090;
}
.top-info .active{
  color: orange;
}