page{
  background: #f2f4f6;
}
/* 无车牌时样式 */
.no-car-info{
  text-align: center;
  display: block;
  margin-top: 240rpx;
  font-size: 34rpx;
  color: #333;
}


/* 有车牌时样式 */
.list-car{
  width: 670rpx;
  margin: 0 auto;
  margin-top: 34rpx;
  padding: 30rpx 0;
  background: white;
  border-radius: 30rpx;
}
.list-car:first-child{
  margin-top: 54rpx;
}
.list-car-info{
  overflow: hidden;
}
.list-car-number{
  float: left;
  margin-left: 50rpx;
  color:#333;
  font-weight: 700;
  font-size: 38rpx;
}
.list-car-time{
  float: left;
  margin-left: 50rpx;
  color:#333;
  font-size: 32rpx;
}
.list-pay{
  text-align: center;
  margin-top: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.list-pay text{
  font-size: 28rpx;
  color: #777;
}
.with_arrow {  
  float: right;
  width: 20px;  
  height: 20px;  
  margin:0 30rpx;
}
